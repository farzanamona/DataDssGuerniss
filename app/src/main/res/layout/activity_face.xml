<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".FaceActivity">
    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/subcategory_bg_shape"
        android:gravity="center"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Face"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <!-- Main drawer layout-->
    <androidx.drawerlayout.widget.DrawerLayout
        tools:context=".main.MainActivity"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!-- Your content area -->
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_5sdp"
                        >
                        <LinearLayout
                            android:id="@+id/faceItem1"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_bg_shape"
                            android:layout_marginLeft="@dimen/_5sdp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contour"
                                android:textColor="@color/Block"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/faceItem2"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/category_bg_shape"

                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Powder"
                                android:textColor="@color/Block"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/faceItem3"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/category_bg_shape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Foundation"
                                android:textColor="@color/Block"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/faceItem4"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/category_bg_shape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Setting Spray"
                                android:textColor="@color/Block"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/faceItem5"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/category_bg_shape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BB Cream"
                                android:textColor="@color/card"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/faceItem6"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/category_bg_shape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Concealer"
                                android:textColor="@color/Block"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/faceItem7"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/category_bg_shape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlighter"
                                android:textColor="@color/Block"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/faceItem8"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/category_bg_shape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Makeup Remover"
                                android:textColor="@color/Block"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/faceItem9"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/category_bg_shape"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Primer"
                                android:textColor="@color/Block"
                                android:textSize="@dimen/_15sdp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <FrameLayout
                    android:id="@+id/fragementView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </LinearLayout>>

        </FrameLayout>

    </androidx.drawerlayout.widget.DrawerLayout>


</LinearLayout>
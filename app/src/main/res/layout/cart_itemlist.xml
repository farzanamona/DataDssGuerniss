<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:padding="@dimen/_2sdp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/round_shape_white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="@dimen/_50sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_height="@dimen/_50sdp"
                />
            <LinearLayout
                android:layout_width="@dimen/_150sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp">
                <TextView
                    android:id="@+id/prod_nametv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hfsdhfjsfhsjhhffhsshuifhhhddddsdsssds"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/priceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="650"
                    android:textColor="@color/Block"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"

                    />

                    <TextView
                        android:id="@+id/Tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Tk."
                        android:textColor="@color/Block"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tvColorCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color code : "
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"

                        android:layout_marginLeft="@dimen/_5sdp"
                        />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="@dimen/_5sdp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/plusBtn"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:background="@drawable/add"
                    android:padding="@dimen/_5sdp"

                    />
                <EditText
                    android:id="@+id/qentityEt"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:text="1"
                    android:layout_margin="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:background="@drawable/edit_bg_round_corner"
                    android:textAlignment="center"
                    android:gravity="center"

                    />
                <Button
                    android:id="@+id/minusBtn"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:background="@drawable/minus"
                    android:padding="@dimen/_5sdp"

                    />
            </LinearLayout>
            <Button
                android:id="@+id/cartDeleteBtn"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/delete_button"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
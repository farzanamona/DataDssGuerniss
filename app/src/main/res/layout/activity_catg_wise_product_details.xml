<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".CatgWiseProductDetailsActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="center">
    <ImageView
        android:id="@+id/prod_details_image"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_marginLeft="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"/>
    <Button
        android:id="@+id/backBtn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/delete_button"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_100sdp"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shahp_round_corner"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp"
    >
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MOISTURIZING AND HYDRATING ESSENCE 30ML"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="650 "
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tk."
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Velvet matte Lipsticks Popular Smooth Long lasting Silky Temptation Lipstick Nutritious MoisturizingLipstick."
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Colors"
        android:textColor="@color/white"
        android:textSize="@dimen/_18sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:id="@+id/color1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#AC0606"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color2"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#330303"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color3"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F31F0F"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color4"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#2E1010"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color5"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#AC0606"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color6"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#330303"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color7"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F31F0F"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color8"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#2E1010"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color9"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#F31F0F"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>
            <LinearLayout
                android:id="@+id/color10"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#2E1010"
                android:layout_marginLeft="@dimen/_5sdp"
                >

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <Button
            android:id="@+id/cartBtn"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/shahp_rect_radious_sky"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Cart"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            />
    </LinearLayout>

</LinearLayout>

</LinearLayout>